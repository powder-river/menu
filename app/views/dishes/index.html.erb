<p id="notice"><%= notice %></p>

<h1>Danai's House of Waffles Foodtruck!</h1>

<% @courses.each do |course| %>

<h3><%=course.name %></h3>
<p><%= link_to 'New Dish', new_dish_path(:course_id => course.id) %></p>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Course</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% course.dishes.each do |dish| %>
        <tr>
          <td><%= link_to dish.name, edit_dish_path(dish) %></td>
          <td><%= dish.description %></td>
          <td><%= dish.price %></td>
          <!-- <td><%= dish.course_id %></td> -->
          <!-- <td><%= link_to 'Show', dish %></td> -->
          <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<br>

<%= link_to 'New Dish', new_dish_path %>
